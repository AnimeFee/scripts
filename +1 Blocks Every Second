    -- Loading the OrionLib library
    local OrionLib = loadstring(game:HttpGet('https://raw.githubusercontent.com/shlexware/Orion/main/source'))()
    if not OrionLib then
        error("Failed to load the OrionLib library")
        return
    end

    -- Creating the main window
    local Window = OrionLib:MakeWindow({
        Name = "+1 Block E Second",
        HidePremium = false,
        SaveConfig = true,
        ConfigFolder = "WendelCfg",
        IntroEnabled = false
    })

    -- Table to store global variables
    local G = {
    Click = false,
    Rebirth = false,
    EGG1 = false,
}

    -- Creating the Player tab
    local PlayerTab = Window:MakeTab({
        Name = "Scripts",
        Icon = "rbxassetid://4483345998",
        PremiumOnly = false
    })
 
   local EggsTab = Window:MakeTab({
        Name = "Eggs",
        Icon = "rbxassetid://4483345998",
        PremiumOnly = false
    })

   PlayerTab:AddToggle({
        Name = "Auto Click",
        Default = false,
        Callback = function(Value)
            G.Click = Value
            if Value then
                while G.Click do
game:GetService("ReplicatedStorage").Remotes.PlaceBlock:FireServer()
               wait(1)
end
            end
        end,
    })


   PlayerTab:AddToggle({
        Name = "Auto Rebirth",
        Default = false,
        Callback = function(Value)
            G.Rebirth = Value
            if Value then
                while G.Rebirth do
local args = {
            [1] = "RebirthShop"
        }

        game:GetService("ReplicatedStorage").Remotes.Rebirth:InvokeServer(unpack(args))
               wait(1)
end
            end
        end,
    })


PlayerTab:AddButton({
Name = "Daily Gifts",
Callback = function()
while wait() do
game:GetService("ReplicatedStorage").Remotes.ClaimGift:InvokeServer()
end
end
})


   EggsTab:AddToggle({
        Name = "Auto Buy Grass Egg(500)",
        Default = false,
        Callback = function(Value)
            G.EGG1 = Value
            if Value then
                while G.EGG1 do
local args = {
            [1] = "Grass",
            [2] = "Single"
        }
        game:GetService("ReplicatedStorage").RemoteEvents.EggOpen:InvokeServer(unpack(args))
                    wait(1) -- Adjust the delay as needed
                end
            end
        end,
    })
